# use TCP instead of UDP (commonly not supported by load balancers)
proto tcp-client

# don't cache authorization information in memory
auth-nocache

# stop process if something goes wrong
remap-usr1 SIGTERM 

# Use a dynamic tun device.
dev tun

# get all routing information from server
pull

cipher AES-256-CBC

tls-client
key "/srv/secrets/client-key.pem"
cert "/srv/secrets/client-cert.pem"
ca "/srv/secrets/ca-crt.pem"

tls-auth "/srv/secrets/vpn.tlsauth" 1
cipher AES-256-CBC
